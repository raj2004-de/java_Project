import java.io.*;
import java.util.*;
public class JavaFileWriter
{
    public static void main(String[] args) throws IOException, Exception
    {
        Scanner sc=new Scanner(System.in);

     File file=new File("good.txt");
     if(!file.exists())
     {
         System.out.println("File not Present; Create a new File");
         System.out.println(" Do you want to crete a new File? ");
         String Query=sc.next();
         if(Query.equalsIgnoreCase("yes")){
             System.out.println("Enter New Filename");
             String filename=sc.next();
             createFile(filename);
             WritetoFile(filename);
         }
         else
             return ;
     }
    }
    public static void createFile(String name)
    {
        File file = new File(name);
        try
        {
            file.createNewFile();
        }catch(Exception e){
            e.printStackTrace();
        }

        catch (IOException e)
        {
            e.printStackTrace();
        }
    }
    public static void WritetoFile(String Name)
    {
        File file = new File(Name);
        try {
            FileWriter fw = new FileWriter(file, true);
            fw.write(" How Are You Doing? ");
            fw.close();
            System.out.println("\nData Written onto the File");
        }catch(Exception e)
        {
            e.printStackTrace();
        }
        catch (IOException e)
        {
            e.printStackTrace();
        }
    }
}
